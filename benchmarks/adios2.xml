<?xml version="1.0"?>
<adios-config>

    <!--============================================
           Configuration for Benchmark writers
        ============================================-->

    <io name="bp4-writers">
        <engine type="BP4">
            <parameter key="Profile" value="Off"/>
            <parameter key="StatsLevel" value="0"/>
            <parameter key="StreamReader" value="On"/>
        </engine>
    </io>
    <io name="sst-writers">
        <engine type="SST">
            <parameter key="RendezvousReaderCount" value="0"/>
            <parameter key="SpeculativePreloadMode" value="OFF"/>
        </engine>
    </io>
</adios-config>

