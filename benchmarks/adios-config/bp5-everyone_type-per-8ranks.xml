<?xml version="1.0"?>
<adios-config>

    <!--============================================
           Configuration for Benchmark writers
        ============================================-->

    <io name="posix">
        <engine type="BP5">
            <parameter key="Profile" value="Off"/>
            <parameter key="OpenTimeoutSecs" value="10.0"/>
            <parameter key="StatsLevel" value="0"/>
            <parameter key="AggregationType" value="everyonewrites"/>
            <parameter key="NumAggregators" value="32"/>
        </engine>
    </io>
</adios-config>

